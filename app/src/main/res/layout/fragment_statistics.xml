<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.statistics.StatisticsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Summary: two bold cards (visually unified with a divider) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="6dp">

            <!-- Combined toggle: Este Mes / Saldo Restante -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/summaryToggleCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                app:cardCornerRadius="0dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/card_stroke_yellow_selector">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/summaryTitleText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Este Mes"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/summaryValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorSecondary"
                        tools:text="S/ 450" />

                </LinearLayout>

                <!-- Segmented progress: Red (spent) + Green (remaining) -->
                <LinearLayout
                    android:id="@+id/summaryProgressContainer"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:background="#22000000"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/summaryProgressRed"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@color/expense_red" />

                    <View
                        android:id="@+id/summaryProgressGreen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@color/income_green" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Thin divider to visually unify both cards while keeping separate touch zones -->
            <View
                android:id="@+id/topCardsDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000" />

            <!-- Budget Hint Card (moved here) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/budgetCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/card_stroke_yellow_selector">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/budgetTitleText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="lo que te queda"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/budgetHintText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/expense_red"
                            tools:text="S/ 25" />
                    </LinearLayout>

                    <!-- Daily budget bar (visible when showing daily) -->
                    <LinearLayout
                        android:id="@+id/budgetDailyBar"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="6dp"
                        android:background="#22000000"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <View
                            android:id="@+id/budgetDailyRed"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@color/expense_red" />

                        <View
                            android:id="@+id/budgetDailyGreen"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@color/income_green" />
                    </LinearLayout>

                    <!-- Monthly budget bar (visible when showing monthly) -->
                    <LinearLayout
                        android:id="@+id/budgetMonthlyBar"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="6dp"
                        android:background="#22000000"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <View
                            android:id="@+id/budgetMonthlyRed"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@color/expense_red" />

                        <View
                            android:id="@+id/budgetMonthlyGreen"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@color/income_green" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Visualization Toggle (Circular / Barras / Simple) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/vizToggleGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/vizPieButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Circular"
                        app:icon="@android:drawable/btn_star_big_on"
                        app:iconPadding="6dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/vizBarButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Barras"
                        app:icon="@android:drawable/ic_menu_sort_by_size"
                        app:iconPadding="6dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/vizListButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Simple"
                        app:icon="@android:drawable/ic_menu_agenda"
                        app:iconPadding="6dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Info over-limit -->
        <TextView
            android:id="@+id/overLimitInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/expense_red"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="alquiler gastó S/ 250.00" />

        <!-- Pie Chart: Distribución por Categoría -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/pieCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distribución por Categoría"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/pieToggleGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pieWeekButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Esta semana"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pieMonthButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Este mes"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pieRangeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rango"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:id="@+id/pieRangeContainer">

                    <TextView
                        android:id="@+id/pieRangeLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="--/--/---- - --/--/----"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/piePickRangeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Elegir fechas"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                </LinearLayout>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Stacked Bar Chart: Gastos por Semana -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/barCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/weekPrevButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Semana anterior"
                        app:srcCompat="@drawable/ic_arrow_back_24"
                        app:tint="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/weekRangeLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Semana"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/weekNextButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Semana siguiente"
                        app:srcCompat="@drawable/ic_arrow_forward_24"
                        app:tint="?attr/colorOnSurface" />
                </LinearLayout>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="260dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        

        <!-- Categories by Amount -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/categoriesCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Period controls moved here to live with the Simple stats list -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/periodToggleGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/weekButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Semana"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/monthButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mes"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/periodRangeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=".."
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gastos por Categoría"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoriesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_category_stat" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Deep Analysis (ChatGPT placeholder) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/deepAnalysisCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@android:drawable/ic_dialog_info"
                        android:contentDescription="IA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Análisis Profundo"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/deepAnalysisSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Usa IA para obtener insights de tus gastos"
                    android:textSize="13sp"
                    android:textColor="@android:color/darker_gray" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deepAnalysisButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Analizar con IA" />

                <TextView
                    android:id="@+id/deepAnalysisOutput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    tools:text="Resumen e insights aparecerán aquí..." />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Recent Expenses -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gastos Recientes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recentExpensesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_expense" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
